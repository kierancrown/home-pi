{
  "name": "home-pi",
  "description": "This is my smart home pi software",
  "authors": "Kieran Crown <kieran.crown@gmail.com>",
  "version": "1.0.0",
  "license": "UNLICENCED",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_PATH=./dist node dist/index.js",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "dev": "nodemon src/index.ts",
    "build": "tsc -p .",
    "docker-up": "docker-compose up -d",
    "docker-up-prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker-down": "docker-compose down",
    "docker-rebuild": "docker-compose build --no-cache"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lgtv2": "^1.6.3",
    "moment": "^2.29.1",
    "nocache": "^3.0.1",
    "ping": "^0.4.1",
    "wol": "^1.0.7",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lgtv2": "^1.4.2",
    "@types/node": "^16.11.6",
    "@types/ping": "^0.4.0",
    "@types/wol": "^1.0.1",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "concurrently": "^6.3.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.3.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kierancrown/home-pi.git"
  },
  "author": "Kieran Crown <kieran.crown@gmail.com>"
}
